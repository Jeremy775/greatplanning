{% extends 'base.html.twig' %}

{% block title %}{{ cour.nomCours }}{% endblock %}

{% block body %}
    <h1>{{ cour.nomCours }}</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Cours</th>
                <td>{{ cour.nomCours }}</td>
            </tr>
            <tr>
                <th>Documents</th>
                <td> 
                    {% for image in cour.images %}
                        <img src="{{ asset('/uploads/cours/' ~ image.name) }}" alt="Image" width = "700vh">            
                    {% endfor %}
                </td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_cours_index') }}">Retour Ã  la liste</a>

    <a href="{{ path('app_cours_edit', {'id': cour.id}) }}">Modifier</a>

{% endblock %}
